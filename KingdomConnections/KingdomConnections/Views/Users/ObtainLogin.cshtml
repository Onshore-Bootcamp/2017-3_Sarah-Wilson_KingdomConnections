@model KingdomConnections.ViewModels.LoginVM

@{
    ViewBag.Title = "Login";
}


   

    <h2> Please Login </h2>

    <div class="row">
        <div class="col-lg-10">
            Login info
        </div>
        <div class="col-lg-12">
            <img src="~/Custom/Images/Bible study.jpg" />
            <img src="~/Custom/Images/kingdom Connection logo.JPG" />
            <img src="~/Custom/Images/images.jpg" />
        </div>

    </div>


    @using (Html.BeginForm("ObtainLogin", "Users", FormMethod.Post))
    {





        <div class="form-group">
            @Html.LabelFor(Model => Model.LoginInfo.Login)
            @Html.TextBoxFor(Model => Model.LoginInfo.Login)
            @Html.ValidationMessageFor(Model => Model.LoginInfo.Login)
        </div>

        <div class="form-group">
            @Html.LabelFor(Model => Model.LoginInfo.Password)
            @Html.PasswordFor(Model => Model.LoginInfo.Password)
            @Html.ValidationMessageFor(Model => Model.LoginInfo.Password)
        </div>


        <div class="form-group">
            <input class="btn btn-success" type="submit" value="LOGIN" />
        </div>


    }














